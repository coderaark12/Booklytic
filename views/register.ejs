<%- include('partials/header-auth') %>

<div class="container mt-5">
  
  <div class="row justify-content-center">
    <div class="col-sm-10 col-md-6 col-lg-5">
      <div class="card shadow">
        <h1 class="mb-4 mt-3 text-center">Register</h1>
        <div class="card-body p-4">
          <form action="/register" method="POST" novalidate>
            <div class="form-group mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" name="username" id="email" placeholder="Enter your email" required>
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>
            <div class="form-group mb-4">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password" required>
              <div class="invalid-feedback">
                Please provide a password.
              </div>
            </div>

            <h5 class="mb-3 text-danger text-center">
              <% if(locals.ifExist){ %>
                User already exists with that email
                <% } %>
            </h5>
            <button type="submit" class="btn btn-dark w-100 mb-3">Sign Up</button>
          </form>

          <!-- Login and Forgot Password Buttons -->
          <div class="d-flex justify-content-between">
            <p>Already have an account?  <a href="/login" class="link-primary text-decoration-none">Login</a></p>
          </div>
        </div>
      </div>
    </div>


    
    <!-- Vertical Line Separator -->
    <div class="col-md-1 d-none d-md-flex justify-content-center align-items-center">
      <div class="border-end" style="height: 100%; border: 2px solid #0000007d;"></div>
    </div>


    <!-- Google Authentication aligned with the form -->
    <div class="col-sm-8 col-md-6 col-lg-4 d-flex align-items-center">
      <div class="card shadow-sm border-0 h-25 w-100 d-flex flex-column justify-content-center" >
        <div class="card-body text-center p-4 flex-grow-1 d-flex shadow justify-content-center align-items-center" >
          <a class="btn btn-outline-dark w-100" href="/auth/google" role="button" >
            <i class="fab fa-google me-2"></i>Continue with Google
          </a>
        </div>
      </div>
    </div>


  </div>
</div>

<script>
  (function () {
    'use strict';
    var form = document.querySelector('form'); 
  
    form.addEventListener('submit', function (event) {
      if (!form.checkValidity()) {
        event.preventDefault(); 
        event.stopPropagation();
      }
      form.classList.add('was-validated'); 
    }, false);
  })();
  </script>
  

